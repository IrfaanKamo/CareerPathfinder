@{
    ViewBag.Title = "Password Reset Notice";
}

<div class="section section-breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Password Reset Notice</h1>
            </div>
        </div>
    </div>
</div>

<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <div class="basic-login">
                    <p align="center">@TempData["ResetPasswordMessage"]</p> <br />
                    <div class="row">
                        <div class="col-md-6 col-md-offset-4">
                            <div class="form-group">
                                <a href="@Url.Action("Index", "Home")" class="btn">Return Home</a>
