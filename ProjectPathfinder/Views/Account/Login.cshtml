@model ProjectPathfinder.ViewModels.AccountLogin

@{
    ViewBag.Title = "Login";
}

<div class="section section-breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Login</h1>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    <div class="section">
        <div class="container">
            <div class="row">

                <div class="col-sm-5">
                    <div class="basic-login">
                            @Html.AntiForgeryToken()
                            <div>
                                @Html.ValidationSummary()
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(x => x.Email)
                                @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control" } } )
                            </div>
                            
                            <div class="form-group">
                                @Html.LabelFor(x => x.Password)
                                @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control" } })
                            </div>

                            <div class="form-group">
                                <a href="@Url.Action("Forgot_Password", "Account")" class="forgot-password">Forgot password?</a>
                                <button type="submit" class="btn pull-right" >Login</button>
                                <div class="clearfix"></div>
                            </div>
                    </div>
                </div>

                <div class="col-sm-7 social-login">
                    <div class="clearfix"></div>
                    <div class="not-member">
                        <p>Not a member? @Html.ActionLink("Register Here", "Sign_Up", "Account")</p>
                    </div>                    
                </div>

            </div>
        </div>
    </div>
}

