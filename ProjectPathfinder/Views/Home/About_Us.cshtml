      function initMap() {
          var uluru = { lat: -29.853394, lng: 31.026455 };
          var map = new google.maps.Map(document.getElementById('contact-us-map'), {
              zoom: 17,
              center: uluru
          });
          //var marker = new google.maps.Marker({
          //    position: uluru,
          //    map: map
          //});
      }
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBRj3Yz6jUlzq8OxEuwGQHcc7mCbTAn0q8&callback=initMap"
        async defer></script>