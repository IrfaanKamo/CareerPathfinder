@{
    Layout = "~/Areas/Member/Views/Shared/_TestLayout.cshtml";
    ViewBag.Title = "Step Eight";
}

@model ProjectPathfinder.Areas.Member.ViewModels.TestStepEight
@using ProjectPathfinder.Infrastructure.Extensions

@*Modal Dialog Boxes*@

@Html.ModalDialog("bullseye",
                  "USEFUL HINTS WHEN UTILISING THE BULLSEYE POSTERS",
                  File.ReadAllText(Server.MapPath(@"~/App_Data/BullsEyeDescription.txt")))

@*End Modal Dialog Boxes*@

<div class="section">
    <div class="container">
        <div class="panel panel-success">
            <div class="panel-body">

                @using (Html.BeginForm())
                {
                    <div>@Html.ValidationSummary()</div>

                    <h3 class="test-step-title"><span class="circleLetter">8</span>Bullseye Workshop and Chosen Careers</h3>
                    <p class="test-step-info">
                        Career values represent anything important in connection with a person’s career.
                    </p>
                    @Html.Partial("~/Views/AreaPartials/_Step_08.cshtml", Model)
                    @Html.TestScreenButtons("Step_08")
                }

            </div>
        </div>
    </div>
</div>