@model ProjectPathfinder.Areas.Admin.ViewModels.AccountIndex
<h1>Admin Panel</h1>
<br />

<!--Success message-->
@if (TempData["AdminResultMessage"] != null && (string)TempData["AdminResultMessage"] != "")
{
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @((string)TempData["AdminResultMessage"])
            </div>
        </div>
    </div>

}
<!--End Success message-->

<div class="table-responsive">
    <table style="width: 30%;" class="table">
        <tbody>
            <tr>
                <td width="15%"><label>Pending Results Count</label></td>
                <td width="5%"><span class="badge">@Model.NumberOfPendingResults</span></td>
                <td width="10%"><a href="@Url.Action("PendingResults", "Member", new {area="admin"})">View All</a></td>
            </tr>
            <tr>
                <td><label>Number of Active Members</label></td>
                <td><span class="badge">@Model.NumberOfMembers</span></td>
                <td><a href="@Url.Action("Index", "Member", new {area="admin"})">View All</a></td>
            </tr>
        </tbody>
    </table>
</div>

